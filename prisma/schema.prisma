generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  email     String   @unique
  login     String   @unique
  name      String
  password  String
}

model Report {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  url String
}

model Exam {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  fioCyrillic      String
  fioLatin         String
  passportNumber   String
  birthDate        String
  examType         String
  examTry          Int
  phone            String
  registrationDate String
  examDate         String
  arrived          Boolean
  workAnnulled     Boolean
  passed           Boolean
  paid             Boolean
  serviceProvided  Boolean
  examOption       String
  results          Int[] 
  }
